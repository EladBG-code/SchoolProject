<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="25sp"
            android:text="הרשמה"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            />


    </LinearLayout>

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/applogo"
        android:layout_gravity="center"
        />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            app:cardCornerRadius="25sp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginBottom="10sp"
                >
                <EditText
                    android:layout_marginTop="5sp"
                    android:layout_width="175sp"
                    android:layout_height="match_parent"
                    android:id="@+id/etLName"
                    android:hint="שם משפחה"/>

                <EditText
                    android:layout_marginTop="5sp"
                    android:layout_width="175sp"
                    android:layout_height="match_parent"
                    android:id="@+id/etFName"
                    android:hint="שם פרטי" />


            </LinearLayout>

                <EditText
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/icon_username_login"
                    android:id="@+id/etUsername"
                    android:hint="שם משתמש"
                    />

                <EditText
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/etEmailReg"
                    android:hint="אימייל"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/email_icon"
                    />

                <EditText
                    android:layout_marginTop="7sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/etPassword"
                    android:inputType="textPassword"
                    android:gravity="right"
                    android:drawableStart="@drawable/icon_lock_password"
                    android:hint="סיסמה"
                    android:layout_marginBottom="12sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_marginBottom="12sp"
                    >

                    <Spinner
                        android:id="@+id/spinnerClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="בחר כיתה: "
                        />


                </LinearLayout>


            </LinearLayout>



        </androidx.cardview.widget.CardView>















    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="את\\ה מורה?"
            android:textSize="20sp"
            android:id="@+id/cbIsTeacher"
            />
    </LinearLayout>-->


    <androidx.cardview.widget.CardView
        android:id="@+id/cvRegisterBtn"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="10sp"
        app:cardCornerRadius="25sp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="הירשמו"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17sp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="התחברו"
            android:textStyle="bold"
            android:id="@+id/tvLoginBack"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="כבר יש לכם חשבון? "
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>



</LinearLayout>
