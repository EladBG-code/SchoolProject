<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    tools:context=".Homepage">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="top"
        android:id="@+id/appBarLayout1"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:menu="@menu/main_menu"
            app:navigationIcon="@drawable/navigation_icon" />
    </com.google.android.material.appbar.AppBarLayout>



    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".Homepage"
        tools:openDrawer="start">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <FrameLayout
                    android:id="@+id/frameLayoutTwo"
                    android:layout_width="match_parent"
                    android:layout_height="621dp"
                    android:layout_gravity="top|right"
                    android:gravity="top|right"
                    android:orientation="horizontal"
                    app:layout_anchorGravity="top|right">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivProfilePictureIconHomepage"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="right|top"
                        android:background="@color/profile_icon_image_final_background"
                        android:foreground="@drawable/profile_icon_image_final_foreground"
                        android:foregroundTint="#FFFFFF"
                        android:src="@drawable/profile_icon_image_final_foreground"
                        app:layout_anchorGravity="top|right"
                        app:shapeAppearance="@style/roundedImageViewRounded"
                        android:layout_marginRight="15sp"
                        android:layout_marginTop="30sp"
                        app:strokeWidth="1sp" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/llOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="621dp"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvToSummaries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30sp"
                        android:gravity="right"
                        android:text="לסיכומים: "
                        android:textSize="25dp" />


                    <ImageView
                        android:id="@+id/ivLibraryIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30sp"
                        android:background="@drawable/local_library_icon" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvHomeWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:text="שלום"
                    android:textSize="35sp"
                    app:layout_anchor="@+id/frameLayoutTwo"
                    app:layout_anchorGravity="center" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </ScrollView>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/header"
            app:menu="@menu/main_menu">


        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>